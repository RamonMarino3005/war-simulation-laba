{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "types/express"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts"
  ]
}
